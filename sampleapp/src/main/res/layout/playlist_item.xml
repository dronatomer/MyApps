<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/inflate_allsong_row"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin5dp"
        android:layout_marginEnd="@dimen/margin5dp"
        android:layout_marginBottom="@dimen/margin5dp"
        card_view:cardElevation="10dp"
        app:cardCornerRadius="12px"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/rl_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_box">


            <ImageView
                android:id="@+id/iv_list_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/imageheight"
                android:scaleType="centerCrop"
                android:src="@drawable/box" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/iv_list_item"
                android:padding="@dimen/padding5dp"
                >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="2"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text=""
                    android:fontFamily="@font/magnificent_fonts"
                    android:textColor="@color/md_grey_700"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>